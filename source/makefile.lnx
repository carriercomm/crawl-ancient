# -*- Makefile -*- for Dungeon Crawl (linux)

#APPNAME = crawl4.1
GAME = crawl4.1

# this file contains a list of the libraries.
# it will make a variable called OBJECTS that contains all the libraries
include makefile.obj

OBJECTS += liblinux.o

CXX = g++-4.1
#CXX = g++
DELETE = rm -f
COPY = cp
OS_TYPE = LINUX

CFLAGS = -Wall -Wwrite-strings -Wabi -Wold-style-cast -Woverloaded-virtual -Wsign-promo -Wsynth -W -Wfloat-equal -Wshadow -Wcast-qual -Wconversion -Wredundant-decls -Winline -D$(OS_TYPE) $(EXTRA_FLAGS)
# CFLAGS = -Wall -Wwrite-strings -D$(OS_TYPE) $(EXTRA_FLAGS)

# LDFLAGS = -static
MCHMOD = 2755
INSTALLDIR = /usr/games

# gsl and gslcblas are for USE_GSL_RAND (see AppHdr.h)
# LIB = -lncurses -lgsl -lgslcblas
LIB = -lncurses

# Include for Linux
INCLUDES = -I/usr/include/ncurses

all: $(GAME)

install: $(GAME)
	$(COPY) $(GAME) ${INSTALLDIR}
	chmod ${MCHMOD} ${INSTALLDIR}/$(GAME)

clean:
	$(DELETE) *.o

distclean:
	$(DELETE) *.o
	$(DELETE) bones.*
	$(DELETE) morgue.txt
	$(DELETE) scores
	$(DELETE) $(GAME)
	$(DELETE) *.sav
	$(DELETE) core
	$(DELETE) *.0*
	$(DELETE) *.lab

$(GAME): $(OBJECTS)
	${CXX} ${LDFLAGS} $(INCLUDES) $(CFLAGS) $(OBJECTS) -o $(GAME) $(LIB)
	chmod ${MCHMOD} $(GAME)

debug: $(OBJECTS)
	${CXX} ${LDFLAGS} $(INCLUDES) $(CFLAGS) $(OBJECTS) -o $(GAME) $(LIB)

profile: $(OBJECTS)
	${CXX} -g -p ${LDFLAGS} $(INCLUDES) $(CFLAGS) $(OBJECTS) -o $(GAME) $(LIB)

.cc.o:
	@echo -------------------- $< --------------------
	${CXX} ${CFLAGS} -c $< ${INCLUDE}
	@echo

.h.cc:
	touch $@
